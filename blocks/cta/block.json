{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "acf/cta",
  "version": "0.1.0",
  "title": "CTA",
  "category": "theme",
  "icon": "megaphone",
  "description": "Bloque de llamada a la acción con imagen, texto y botón configurable",
  "keywords": ["cta", "llamada", "accion", "boton", "imagen"],
  "supports": {
    "align": ["wide", "full"],
    "anchor": true,
    "className": true,
    "spacing": { "margin": false, "padding": false },
    "color": { "background": false, "text": false, "gradients": false },
    "typography": { "fontSize": false, "lineHeight": false },
    "shadow": false
  },
  "styles": [
    { "name": "default", "label": "Por defecto", "isDefault": true },
    { "name": "rounded", "label": "Imagen redondeada" },
    { "name": "elevated", "label": "Con elevación" }
  ],
  "acf": {
    "mode": "preview",
    "renderTemplate": "render.php",
    "validate": false
  },
  "example": {
    "attributes": {
      "tagline": "¿Listo para empezar?",
      "title": "Impulsa tu negocio al siguiente nivel",
      "content": "Descubre cómo nuestras soluciones pueden transformar tu empresa y generar resultados extraordinarios.",
      "image_position": "right",
      "primary_button": {
        "title": "Comenzar ahora",
        "url": "#"
      }
    }
  },
  "editorStyle": "file:./editor.css",
  "style": "file:./style.css"
}