{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "acf/related",
  "version": "0.1.0",
  "title": "Contenido Relacionado",
  "category": "theme",
  "icon": "grid-view",
  "description": "Muestra una colección de contenido relacionado con encabezado centrado y diseño en cuadrícula o carrusel.",
  "keywords": ["contenido relacionado", "cards", "carrousel", "showcase", "grid"],
  "supports": {
    "align": ["wide", "full"],
    "anchor": true,
    "className": true,
    "spacing": { "margin": false, "padding": false },
    "color": { "background": false, "text": false, "gradients": false },
    "typography": { "fontSize": false, "lineHeight": false },
    "shadow": false
  },
  "acf": {
    "mode": "preview",
    "renderTemplate": "render.php",
    "validate": false,
    "blockVersion": 3
  },
  "styles": [
    { "name": "default", "label": "Por defecto", "isDefault": true },
    { "name": "cards", "label": "Cards con sombra" },
    { "name": "minimal", "label": "Minimalista" }
  ],
  "example": {
    "attributes": {
      "tagline": "Nuestros Servicios",
      "title": "Soluciones digitales completas",
      "description": "Ofrecemos una amplia gama de servicios digitales para impulsar tu negocio hacia el éxito.",
      "show_carousel_controls": true,
      "items_per_row": 3
    }
  },
  "script": "file:./script.js",
  "editorStyle": "file:./editor-style.css",
  "style": "file:./style.css"
}