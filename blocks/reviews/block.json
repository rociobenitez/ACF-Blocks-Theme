{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "acf/reviews",
  "version": "0.1.0",
  "title": "Reseñas",
  "category": "theme",
  "icon": "grid-view",
  "description": "Muestra una colección de reseñas de clientes con encabezado centrado.",
  "keywords": ["reseñas", "cards", "grid"],
  "supports": {
    "align": ["wide", "full"],
    "anchor": true,
    "className": true,
    "spacing": { "margin": false, "padding": false },
    "color": { "background": false, "text": false, "gradients": false },
    "typography": { "fontSize": false, "lineHeight": false },
    "shadow": false
  },
  "acf": {
    "mode": "preview",
    "renderTemplate": "render.php",
    "validate": false,
    "blockVersion": 3
  },
  "example": {
    "attributes": {
      "tagline": "Lo que dicen nuestros clientes",
      "title": "Reseñas de nuestros clientes",
      "description": "Nuestros clientes comparten su experiencia trabajando con nosotros.",
      "show_carousel_controls": true,
      "items_per_row": 3
    }
  },
  "editorStyle": "file:./editor-style.css",
  "style": "file:./style.css"
}